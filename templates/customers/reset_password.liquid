<section class="row">
  <div id="customer-wrapper" class="desktop-12 mobile-3">

    <div id="template">
      <div class="template_header">
        <h2 class="title">Vaihda salasana</h2>
        <p class="note">Aseta uusi salasana tilillesi {{ email }}</p>
      </div>

      {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}

      <div id="password" class="clearfix large_form">
        <label class="large" for="customer_password">Salasana</label>
        <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <label class="large" for="customer_password_confirmation">Salasana uudelleen</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="secondary button" type="submit" value="Vaihda salasana" />
      </div>
      {% endform %}
    </div>
  </div>
</section>
